<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".codec.AdCodecActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_status"
                android:text="当前状态：IDE"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
        />

        <Button
                android:text="下载mp3"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onDownloadClick"/>
        <Button
                android:text="mp3解码成PCM"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onMp3ToPCMClick"/>
        <Button
                android:text="pcm解码成aac"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onPcmToAacClick"/>
        <Button
                android:text="mp3转aac"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onMp3ToAacClick"/>

        <Button
                android:text="播放pcm"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onPlayPCMClick"/>
        <Button
                android:text="从mp3文件中获取一帧数据"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onGetOneFrameFormMp3Click"/>
    </LinearLayout>

</ScrollView>